@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="row">
        @foreach (var item in ViewBag.Telefoons)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="@item.Afbeeldingen" alt="">
                    <div class="caption">
                        <h4 class="pull-right">@item.Prijs</h4>
                        <h4>
                            <a href="@Url.Action("Product","Product" ,new { productNaam = @item.Naam})">@item.Naam</a>
                        </h4>
                    </div>
                    <div class="ratings">
                    </div>
                </div>
            </div>
        }
    </div>
</body>

