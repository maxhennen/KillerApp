@model KillerApp.Models.Producten

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-8">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <div class="row">
                                <div class="col-xs-6">
                                    <h5><span class="glyphicon glyphicon-shopping-cart"></span> Winkelmand</h5>
                                </div>
                                <div class="col-xs-6">
                                    <a href="/Home/Homepage">Doorgaan met winkelen</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        @ViewBag.Error

                        @if (ViewBag.Error == null)
                        {
                            foreach (var item in ViewBag.Bestelling)
                            {
                                <div class="row">
                                    <div class="col-xs-2">
                                        <img class="img-responsive" src="@item.Afbeeldingen">
                                    </div>
                                    <div class="col-xs-4">
                                        <h4 class="product-name"><strong>@item.Naam</strong></h4><h4><small>@item.Geheugen GB <br /> Kleur: @item.Kleur</small></h4>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="col-xs-6 text-right">
                                            <h6><strong>@item.Prijs <span class="text-muted">x</span></strong></h6>
                                        </div>

                                        <div class="col-xs-2">
                                            <a href="@Url.Action("VerwijderProduct", "Winkelmand", new { productID = @item.ProductID })" class="btn btn-link btn-xs">
                                                <span class="glyphicon glyphicon-trash"> </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="panel-footer">
                                <div class="row text-center">
                                    <div class="col-xs-9">
                                        <h4 class="text-right">Total <strong>@ViewBag.TotaalPrijs</strong></h4>
                                    </div>
                                    <div class="col-xs-3">
                                        <a href="/Winkelmand/Kopen">Bestellen</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

